<% posts.forEach(post=> { %>
    <div class="rounded-lg bg-gray-200">

        <article class="overflow-hidden rounded-lg shadow transition hover:shadow-lg">
            <img alt=""
                src="<%= post.image ? `http://127.0.0.1:8090/api/files/posts/${post.id}/${post.image}` : '/images/default.jpg' %>"
                class="h-56 w-full object-cover rounded-t-lg" />

            <div class="bg-white p-4 sm:p-6">
                <time datetime="<%= post.created %>" class="block text-xs text-gray-500">
                    <%= formatDate(post.created) %>
                </time>

                <a href="/posts/<%= post.id %>">
                    <h3 class="mt-0.5 text-lg text-gray-900">
                        <%= post.title %>
                    </h3>
                </a>

                <a class="group inline-block rounded bg-gradient-to-r from-pink-500 via-red-500 to-yellow-500 p-[2px] hover:text-white focus:outline-none focus:ring active:text-opacity-75"
                    href="/posts/<%= post.id %>">
                    <span class="block rounded-sm bg-white px-8 py-3 text-sm font-medium group-hover:bg-transparent">
                        View
                    </span>
                </a>
            </div>
        </article>
    </div>
    <% }) %>